# ES管理服务环境配置模板
# 复制此文件为 .env 并根据实际环境修改配置

# ================================= Flask配置 =================================
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# ================================= 达梦数据库配置 =============================
# 达梦数据库连接信息
DM_HOST=192.168.1.100
DM_PORT=5236
DM_USER=your_dm_username
DM_PASSWORD=your_dm_password
DM_DATABASE=your_database_name

# ================================= Elasticsearch配置 =========================
# Elasticsearch连接信息
ES_HOST=https://192.168.1.101:9200
ES_USER=elastic
ES_PASSWORD=your_es_password

# ================================= 性能调优配置 =============================
# 连接池大小（根据并发需求调整）
DM_POOL_SIZE=20

# 同步批次大小（根据数据量和服务器性能调整）
SYNC_BATCH_SIZE=1000
ES_BULK_SIZE=2000

# 超高性能模式工作线程数（根据服务器CPU核心数调整）
ULTRA_FAST_WORKERS=16

# ================================= 日志配置 =================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/es_admin/app.log

# ================================= 监控配置 =================================
# 启用性能监控
ENABLE_MONITORING=true

# 任务状态文件路径
TASK_STATUS_FILE=/tmp/es_admin_status.json